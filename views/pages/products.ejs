<% include ../partials/header %>

<table class="table">

    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Price</th>
            <th><a name="" id="" class="btn btn-primary" href="/products/addnewform" role="button">Add new</a></th>
        </tr>
    </thead>

    <tbody>
    <% products.forEach(function(product){ %>
      <tr>
            <td scope="row"><%= product.id %></td>
            <td><%= product.title %></td>
            <td>$<%= product.price %></td>
            <td><a class="btn btn-primary" href="/products/<%=product.id%>" role="button">Edit</a>
            <a name="" id="" class="btn btn-danger" href="/products/delete/<%= product.id %>" role="button">Delete</a>
        <!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
    Launch demo modal
  </button>
  
  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Confirm Delete?</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          ...
        </div>
        <div class="modal-footer">
          <a href="/products/delete/<%= product.id %>""><button type="button" class="btn btn-secondary" data-dismiss="modal">NO</button></a>
          <button type="button" class="btn btn-primary">YES</button>
        </div>
      </div>
    </div>
  </div>    
        </td>
           
        </tr>
    <% }) %>
    </tbody>

</table>


<% include ../partials/footer %>