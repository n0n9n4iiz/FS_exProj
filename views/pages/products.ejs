<% include ../partials/header %>

<table class="table">

    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Price</th>
            <th><a name="" id="" class="btn btn-primary" href="/products/addnewform" role="button">Add new</a></th>
        </tr>
    </thead>

    <tbody>
    <% products.forEach(function(product){ %>
      <tr>
            <td scope="row"><%= product.id %></td>
            <td><%= product.title %></td>
            <td>$<%= product.price %></td>
            <td><a class="btn btn-primary" href="/products/<%=product.id%>" role="button">Edit</a>
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#modelId">
                  Launch
                </button>
                
                <!-- Modal -->
                <div class="modal fade" id="modelId" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                                <h4 class="modal-title" id="modelTitleId">Modal title</h4>
                            </div>
                            <div class="modal-body">
                                Body
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="button" class="btn btn-primary">Save</button>
                            </div>
                        </div>
                    </div>
                </div>
            
        </td></tr>
    <% }) %>
    </tbody>

</table>


<% include ../partials/footer %>